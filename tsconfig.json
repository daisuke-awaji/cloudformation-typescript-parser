{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "noImplicitAny": false,
    "declarationDir": "./lib/types",
  },
  "include": ["src/**/*.ts", "tests/index.test.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}